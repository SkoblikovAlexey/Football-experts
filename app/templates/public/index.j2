{% extends "base.j2" %}

{% set page = "core.index" %}
{% set title = "Футбольные эксперты" %}


{% block title %}
  <div class="col-lg-12 ml-auto mt-3">
    {% if not current_user.is_authenticated %}
      <h2>Привет, неопознанный енот</h2>
    {% else %}
      <h2> Привет, <b>{{ current_user.username }}</b></h2>
    {% endif %}
    <h2>До начала следующего тура</h2>
    <div id="date-countdown"></div>
    <a href="{{ url_for('prediction.list') }}" class="btn btn-primary py-3 px-4 mr-3">Сделать прогноз на следующий тур</a>
  </div>
{% endblock title %}

{% block content %}
<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-striped table-bordered table-dark table-hover">
          {# <caption>Результаты {{ tour_id }} тура</caption> #}
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Команда</th>
              <th scope="col">И</th>
              <th scope="col">В</th>
              <th scope="col">Н</th>
              <th scope="col">П</th>
              <th scope="col">З-П</th>
              <th scope="col">О</th>
              <th scope="col">В</th>
              <th scope="col">Н</th>
              <th scope="col">П</th>
              <th scope="col">З-П</th>
              <th scope="col">В</th>
              <th scope="col">Н</th>
              <th scope="col">П</th>
              <th scope="col">З-П</th>
            </tr>
          </thead>
          <tbody>
            {% for row in rpl_table %}
              <tr>
                <th scope="row">{{ row.place }}</th>
                <td>{{ row.club }}</td>
                <td>{{ row.all_games }}</td>
                <td>{{ row.all_win}}</td>
                <td>{{ row.all_draw}}</td>
                <td>{{ row.all_lose}}</td>
                <td>{{ row.all_goals}}</td>
                <td>{{ row.points}}</td>
                <td>{{ row.home_win}}</td>
                <td>{{ row.home_draw}}</td>
                <td>{{ row.home_lose}}</td>
                <td>{{ row.home_goals}}</td>
                <td>{{ row.away_win}}</td>
                <td>{{ row.away_draw}}</td>
                <td>{{ row.away_lose}}</td>
                <td>{{ row.away_goals}}</td>
              </tr>
            {% endfor %}
          </tbody>
          {# <tfoot>
            <tr class="bg-info">
              <th scope="col" colspan="3">Всего очков за тур</th>
              <th scope="col">{{ tour_results.final_score }}</th>
            </tr>
          </tfoot> #}
        </table>
      </div>
    </div>
  </div>
  {# <div class="row">
    <div class="col-lg-12">
      <div class="d-flex team-vs">
        <div class="team-1 w-50">
          <div class="team-details w-100 text-center">
            <h2>Турнирная таблица</h2>
          </div>
        </div>
        <div class="team-2 w-50">
          <div class="team-details w-100 text-center">
            <h2>Таблица РПЛ</h2>
          </div>
        </div>
      </div>
    </div>
  </div> #}
{% endblock content %}
