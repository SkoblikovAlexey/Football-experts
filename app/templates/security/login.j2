{% extends "base.j2" %}

{% from 'macros/form.j2' import bs_text, bs_btn, checkbox, render_field_errors %}
{% set meta_title = 'Авторизация' %}
{% set page = "security.login" %}
{% block content %}
  <div class="col-lg-4 ml-auto">
    <div class="main__jumbotron">
      <h3 class="main__title">Вход в личный кабинет</h3>
      <form class="form" action="{{ url_for_security('login') }}" method="post" name="login_user_form">
        {{ login_user_form.hidden_tag() }}
        {{ render_field_errors(login_user_form.csrf_token) }}
        {{ bs_text(login_user_form.email) }}
        {{ bs_text(login_user_form.password) }}
        {{ bs_btn(login_user_form.submit, value='Войти') }}
        {{ checkbox(login_user_form.remember) }}
        <p class="main__text"><a href="{{ url_for_security('forgot_password') }}">Забыли пароль?</a></p>
      </form>
      <footer class="main__footer">
        <p class="main__text"><a href="{{ url_for_security('register') }}">Регистрация</a></p>
        <p class="main__text"><a href="{{ url_for_security('send_confirmation') }}">Подтверждение регистрации</a></p>
      </footer>
    </div>
  </div>
{% endblock content %}

{% block js %}
  <script>
    const form = document.querySelector('.form');
    const submitBtn = form.querySelector('[type="submit"]');
    form.addEventListener('submit', () => {
      submitBtn.disabled = true;
    });
  </script>
{% endblock js %}
