{% extends "base.j2" %}
{% from "_macros.j2" import errors, field_with_errors, form_errors %}

{% block content %}
  <div class="form-security w-50 m-auto">
    <form action="{{ url_for_security('register') }}" method="post" name="register_user_form">
      {{ register_user_form.hidden_tag() }}
      <h1 class="h3 mb-3 fw-normal">Регистрация</h1>
      {{ form_errors(register_user_form) }}
      {{ errors(register_user_form.csrf_token) }}
      {{ field_with_errors(register_user_form.email) }}
      {{ field_with_errors(register_user_form.username) }}
      {{ field_with_errors(register_user_form.password) }}
      <button class="btn btn-primary w-100 py-2" type="submit">Зарегистрироваться</button>
      <a class="btn btn-link" href="{{ url_for_security('login') }}">Войти</a>
    </form>
  </div>
{% endblock content %}
